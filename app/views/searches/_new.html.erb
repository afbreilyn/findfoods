<form class="header search-form" action="<%= searches_url %>" method="post">
	<%= auth_token %>

	<input type="search-text" name="search[search_params]" placeholder="Find:">
	<input type="search-text" name="search[start_location]" value="Near:">

	<input type="hidden" name="search[user_id]" value="<%= current_user ? current_user.id : nil %>">

	<input type="submit" value=":)">
</form>

hinted_text_field_tag :search, params[:search], "Enter name, brand or mfg.", :size => 30