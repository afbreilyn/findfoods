
<ul class="comment-list">

	<% @restaurant.comments.each do |parent_comment| %>
		<li class="parent-comment"><%= parent_comment.body %></li>

		<ul class= "sub-comment-list">
			<% comments_by_parent[parent_comment.id].each do |child_comment| %>
				<li class="sub-comment"><%= child_comment.body %></li>
			<% end %>
		</ul>

			Reply to this Review:
			<form action="<%= restaurant_comments_url(@restaurant) %>" 
																														method="POST">
			<input type="hidden" name="comment[parent_comment_id]" 
																		value="<%= parent_comment.id %>">

				
			</form>

		</li>
	<% end %>

</ul>




