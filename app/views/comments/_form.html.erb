
<form class="new-comment group" action="<%= restaurant_comments_url(commentable_id) %>" method="post">
	<%= auth_token %>
	<ul class="comment-list-form">

		<% if commentable_type == "Restaurant" %>


<!-- 				<li class="group">
					<label class="comment-label" for="comment-rating">Rating (0 to 5)</label>
					<input class="rating-box" type="number" min="0" max="5" step="1" name="rating" value="">
				</li> -->

				<li class="rating group">
					<label class="comment-label" for="comment-rating">Rating (0 to 5)</label>
					
	<fieldset id="rating">
	    <input type="radio" id="star5" name="rating" value="5" /><label for="star5" title="five">5 stars</label>
	    <input type="radio" id="star4" name="rating" value="4" /><label for="star4" title="four">4 stars</label>
	    <input type="radio" id="star3" name="rating" value="3" /><label for="star3" title="three">3 stars</label>
	    <input type="radio" id="star2" name="rating" value="2" /><label for="star2" title="two">2 stars</label>
	    <input type="radio" id="star1" name="rating" value="1" /><label for="star1" title="one">1 star</label>
	</fieldset>

				</li>
		<% end %>

			<li class="group">
				<label class="comment-label" for="comment-body">What'd you think?</label>
				<textarea class="comment-textarea" name="comment[body]" id="comment-body"></textarea>
			</li>
	</ul>	

		<input type="hidden" name="comment[parent_comment_id]" 
																									value="<%= parent_comment_id %>">


		<input type="hidden" name="comment[commentable_type]" value="<%= commentable_type %>">
		<input type="hidden" name="comment[commentable_id]" value="<%= commentable_id %>">

		<input type="submit" value="Submit ">

</form>
