<section class="sign-in-content group">

  <h1 class="sign-in-header">Sign In</h1>

  <%= render "layouts/errors" %>

  <h3 class="welcome-message">Welcome back!</h3>


  <form class="sign-in" action="<%= session_url %>" method="post">

    <%= auth_token %>

  <div class="input">
    <label>Email</label>
    <input id='sign-in-text' type="text" name="user[email]" value="">
  </div>

  <div class="input">
    <label>Password</label>
    <input id='sign-in-password' type="password" name="user[password]" value="">
  </div>

    <input type="submit" value="Sign In">

    <input type="submit" id="demo-sing-in" value="Sign in as demo user">


  </form>

</section>

<script>

  function demoData(position) {
    $("#sign-in-text").val("demoUser@example.com");
    $("#sign-in-password").val("password");
  }

  $("#demo-sing-in").on("click", function (event) {
    event.preventDefault();
    demoData();
  });

</script>


